{
  "policy": {
    "description": "Lifecycle policy for heartbeat events",
    "default_state": "hot",
    "schema_version": 1,
    "states": [
      {
        "name": "hot",
        "actions": [
          {
            "rollover": {
              "min_index_age": "1d",
              "copy_alias": true
            }
          }
        ],
        "transitions": [
          {
            "state_name": "delete",
            "conditions": {
              "min_index_age": "7d"
            }
          }
        ]
      },
      {
        "name": "delete",
        "actions": [
          {
            "delete": {}
          }
        ]
      }

    ],
    "ism_template": {
      "index_patterns": ["heartbeat_events*"],
      "priority": 100
    }
  }
}
